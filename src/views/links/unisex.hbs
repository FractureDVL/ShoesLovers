<!-- OPENING UNISEX -->
<div class="container px-4 py-5">
  <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4">
    <div class="col">
      <img src="/img/greenYoshi.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="300" />
    </div>

    <div class="col">
      <div class="d-flex flex-column h-100 p-5 pb-3 text-dark text-shadow-1 text-center">
        <h1 class="display-5 fw-bold lh-1 mb-3 py-4">ShoesLovers para Todos</h1>
        <p class="lead"><em>Busca en ti los puntos que te
            <strong><u>ayuden</u></strong>
            a elevar tu imagen y tu
            <strong><u>esencia</u></strong>.</em></p>
        <div class="d-grid gap-2">
          <a href="#explora" class="btn btn-outline-success btn-lg px-4 me-md-2">Explorar</a>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="col">
        <img src="/img/pinkYoshi.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="300" />
      </div>
    </div>
  </div>
</div>

<!-- ENDING SECTION -->
<hr class="mx-5" />
<!-- OPENING ALBUM -->
<section>
  <div class="album py-1 bg-light">
    <div class="container" id="explora">
      <h4 class="mb-4"><b>EXPLORA TUS GUSTOS</b></h4>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each zapato}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="/shoespic/{{imagen}}" width="420px" height="200px" />
            <div class="card-body">
              <p class="card-text">{{nombre}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button class="btn btn-outline-success" type="button">Comprar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>
<!-- ENDING ALBUM -->
